keywords = {5 spatial patterns,access article under the,any medium,commons attribution license,distribution and reproduction in,large-scale meteorology,pm 2,provided the original,synoptic control,teleconnection with climate indices,terms of the creative,this is an open,which permits use,work is properly cited},
month = {aug},
