file = {:C$\backslash$:/Users/gchen/Box Sync/Research/papers/Sun et al.{\_}2019.pdf:pdf;:C$\backslash$:/Users/gchen/Box Sync/Research/papers/Sun et al.{\_}2019(2).pdf:pdf},
issn = {1680-7324},
journal = {Atmospheric Chemistry and Physics},
month = {oct},
number = {20},
