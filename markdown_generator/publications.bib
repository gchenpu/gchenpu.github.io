doi = {10.5194/acp-22-7575-2022},
issn = {1680-7324},
journal = {Atmospheric Chemistry and Physics},
month = {jun},
number = {11},
pages = {7575--7592},
title = {{The relationship between PM2.5 and anticyclonic wave activity during summer over the United States}},
